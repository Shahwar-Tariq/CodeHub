            <div class="d-flex flex-column flex-lg-row-fluid py-10">
                <!--begin::Content-->
                <div class="d-flex flex-center flex-column flex-column-fluid" style="margin-top:15px">
                    <!--begin::Wrapper-->

                    <div>
                        <!--begin::Form-->
                        <form class="form w-100" action="/JoinTasks/AddQuestions" novalidate="novalidate" id="kt_sign_up_form" enctype="multipart/form-data" method="post">
                            <!--begin::Heading-->
                            <div class="mb-10 text-center">
                                <!--begin::Title-->
                                <h1 class="text-dark mb-3">Add Questions</h1>

                            </div>

                            @if (TempData["message"] != null)
                            {

                                @Html.Raw(@TempData["message"])

                            }
                            <div class="row fv-row mb-7">

                                <div class="col-xl-6">
                                    <label class="required  fw-bolder text-dark fs-6">Course</label>
                                    <select id="course" name="course_code" data-control="select2" data-placeholder="Select a Course" data-hide-search="true" class="form-select form-select-solid fw-bolder">
                                        <option></option>
                                        @foreach (var c in Model)
                                        {
                                            <option value="@c.course_code">@c.course_name</option>
                                        }
                                    </select>

                                </div>

                                <div class="col-xl-6" style="align-content:center">
                                    <label class="required fw-bolder text-dark fs-6">Topic Name</label>
                                    <select id="topics" name="topic_id" data-control="" data-placeholder="Select a Topic" data-hide-search="true" class="form-select form-select-solid fw-bolder"></select>
                                </div>
                            </div>
                            <div class="row fv-row mb-7">

                                <div class="col-xl-6" style="align-content:center">
                                    <label class="required fw-bolder text-dark fs-6">Quiz Name</label>
                                    <select id="quizes" name="quiz_id" data-control="" data-placeholder="Select a Quiz" data-hide-search="true" class="form-select form-select-solid fw-bolder">
                                        <option value="0" style="display:none"></option>
                                    </select>
                                </div>

                                <div class="col-xl-6">
                                    <label class="required fw-bolder text-dark fs-6">Question Name</label>
                                    <input type="text" id="txtQuestionName" name="question_name" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter Question name." />
                                </div>
                            </div>
                            <div class="row fv-row mb-7">
                                <div class="col-xl-6" style="align-content:center">
                                    <label class="required fw-bolder text-dark fs-6">Options</label></br>

                                    <input type="radio" checked id="op1" name="answers" value="0">
                                    <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter option 1" id="op1" name="option1" />

                                    <input type="radio" id="op2" name="answers" value="1">
                                    <input type="text" id="op2" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter option 2" name="option2">

                                    <input type="radio" id="op3" name="answers" value="2">
                                    <input type="text" id="op3" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter option 3" name="option3">

                                    <input type="radio" id="op4" name="answers" value="3">
                                    <input type="text" id="op4" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter option 4" name="option4">
                                </div>

                            </div>


                            <div class="text-center">
                                <!--begin::Submit button-->
                                <button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary">
                                    <span class="indicator-label">Add Question</span>
                                    <span class="indicator-progress">
                                        Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                                <!--end::Submit button-->

                            </div>

                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <!--end::Actions-->
