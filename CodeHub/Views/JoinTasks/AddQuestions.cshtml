    <script>
        $(document).ready(function () {
            console.log("asdf");
            //jquery selector
            //idr sy action k pas req jaye gi
            $("#course").change(function (e) {
                var id = e.target.value;
                //yahan action sy  req wapis aye gi
                $.ajax({
                    url: "/JoinTasks/GetQuizTopic",
                    data: { course_code: id },
                }).done(function (res) {
                    $("#topics").html(res[0]);
                    $("#quizes").html(res[1]);
                    ("#topics").select2({ minimumResultsForSearch: -1 })
                    ("#quizes").select2({ minimumResultsForSearch: -1 })
                });

            })
            $("#topics").change(function (e) {
                var id = e.target.value;
                //yahan action sy  req wapis aye gi
                $.ajax({
                    url: "/JoinTasks/GetQuiz",
                    data: { topic_id : id },
                }).done(function (res) {

                    $("#quizes").html(res);
                    ("#quizes").select2({ minimumResultsForSearch: -1 })
                });

            })
        });


    </script>
    <!--End::Google Tag Manager (noscript) -->
