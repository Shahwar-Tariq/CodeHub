        </div>
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <!--begin::Aside-->
            <!--begin::Aside-->
            <!--begin::Body-->
            <div class="d-flex flex-column flex-lg-row-fluid py-10">
                <!--begin::Content-->
                <div class="d-flex flex-center flex-column flex-column-fluid" style="margin-top:15px">
                    <!--begin::Wrapper-->
                    <div class="w-lg-600px p-10 p-lg-15 mx-auto">
                        <!--begin::Form-->
                        <form action="/JoinTasks/AddTopic" method="post" class="form w-100" novalidate="novalidate">
                            <!--begin::Heading-->
                            <div class="mb-10 text-center">
                                <!--begin::Title-->
                                <h1 class="text-dark mb-3">Add Topic</h1>
                                <!--end::Title-->
                                <!--begin::Link-->
                                <!--end::Link-->
                            </div>
                            @if (TempData["message"] != null)
                            {

                                @Html.Raw(@TempData["message"])

                            }
                            
                            <div class="row fv-row mb-7">
                                <!--begin::Col-->
                                <div class="col-xl-6">
                                    <label class="required fw-bolder text-dark fs-6">Course Name</label>
                                    <select name="course_code" data-control="select2" data-placeholder="Select a Course Name" data-hide-search="true" class="form-select form-select-solid fw-bolder">
                                        <option></option>
                                        @foreach (var c in Model)
                                            { 
                                              <option value="@c.course_code"> @c.course_name</option>
                                            }
                                    </select>
                                </div>
                                <!--end::Col-->
                                <!--begin::Col-->
                                <div class="col-xl-6">
                                    <label class="required fw-bolder text-dark fs-6">Topic Number</label>
                                    <input type="number" value="0" min="0" max="1000"name="topic_num" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter Topic Number" />

                                </div>
                                <!--end::Col-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row mb-7">
                                <label class="required fw-bolder text-dark fs-6">Topic Name</label>
                                <input type="text" name="topic_name" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="Enter Topic Name" />
                                
                            </div>
                          

                            <div class="text-center">
                                <!--begin::Submit button-->
                                <button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5">
                                    <span class="indicator-label">Add Topic</span>
                                    <span class="indicator-progress">
                                        Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                                <!--end::Submit button-->

                            </div>
                            <!--end::Actions-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Wrapper-->
                </div>
