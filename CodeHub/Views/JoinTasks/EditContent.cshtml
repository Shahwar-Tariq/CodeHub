    <script>
        $(document).ready(function () {
            //jquery selector
            //idr sy action k pas req jaye gi
            $("#remove").click(function (e) {
                var name = $("#videoname").val();
                //yahan action sy  req wapis aye gi
                $.ajax({
                    url: "/JoinTasks/RemoveVideo",
                    data: { videoName: name },
                }).done(function (res) {
                    $("#video").html(res);
                });

            })
        });
    </script>
